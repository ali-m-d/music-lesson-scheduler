<header class="bg-white">
  <nav class="flex items-center justify-between px-5 md:px-10 lg:px-20 bg-blue-200 border-b nav">
    <%= link_to root_path do %>
      <div class="flex flex-row items-center flex-no-shrink">
        <%= image_tag "sax-sketch-small.png", size: "45x45", class: "inline my-2 mr-3" %>
        <div class="flex flex-col justify-around">
          <div class="tracking-tight font-semibold text-3xl orange">Rebecca Railton</div>
          <div class="tracking-tighter font-semibold text-2xl orange">Woodwind & Piano Teacher</div>
        </div>
      </div>
    <% end %>
    <div class="flex flex-row flex-1 mt-2 lg:mt-0 justify-center text-center">
      <%= link_to landing_path, remote: (controller_name != 'lessons') do %>
        <div class="flex flex-col items-center text-gray-700 ml-3">
          <%= render 'icons/home' %>
          <div class="pt-1 text-xs tracking-tight font-medium orange uppercase">Home</div>
        </div>
      <% end %>
      <%= link_to lessons_path do %>
        <div class="flex flex-col items-center text-gray-700 ml-3">
          <%= render 'icons/conductor' %>
          <div class="pt-1 text-xs tracking-tight font-medium orange uppercase">Schedule Lesson</div>
        </div>
      <% end %>
      <%= link_to about_path, remote: (controller_name != 'lessons') do %>
        <div class="flex flex-col items-center text-gray-700 ml-3">
          <%= render 'icons/info' %>
          <div class="pt-1 text-xs tracking-tight font-medium orange uppercase">About Me</div>
        </div>
      <% end %>
    </div>
    <div class="block md:hidden">
      <button class="flex items-center px-3 py-2 border border-gray-500 rounded text-gray hover:text-gray-600 hover:border-gray-600">
        <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
  </nav>
</header>

<% if !current_page?(root_path) %>
  <header class="bg-white">
    <nav class="flex items-center justify-between px-5 md:px-10 lg:px-20 text-gray-800 border-b bg-teal-100 scheduler-nav sticky">
      <div class="flex items-center mr-6 flex-no-shrink">
        <%= link_to root_path, class:"text-2xl tracking-tight font-semibold" do %>
          <%= image_tag "conductor.svg", size: "45x45", class: "inline my-2 mr-2" %>
          LessonScheduler
        <% end %>
      </div>
      <div class="block w-full md:flex md:justify-end md:items-center md:w-auto">
        <div class="w-full block lg-flex lg-flex-row lg-flex-1 mt-2 lg:mt-0 text-center lg:text-left lg:justify-end">
          <% unless user_signed_in? %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-default mr-2" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %>
          <% else %>
            <%= link_to "Dashboard", lessons_path, class: "btn btn-default mr-2" %>
            <%= link_to "Schedule Lesson", new_lesson_path, class: "btn btn-default mr-2" %>
            <%= link_to "Users", users_path, class: "btn btn-default mr-2" if admin? %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default mr-2" %>
          <% end %>
        </div>
      </div>
      <div class="block lg:hidden">
        <button class="flex items-center px-3 py-2 border border-gray-500 rounded text-gray hover:text-gray-600 hover:border-gray-600">
          <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
        </button>
      </div>
    </nav>
  </header>
<% end %>