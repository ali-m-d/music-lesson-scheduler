<div class="max-w-lg my-6 m-auto">
  <div class="px-10 py-6 bg-white border border-gray-400 rounded">

    <div class="flex flex-wrap justify-between items-center mb-2">
      <h1><%= @lesson.name %></h1>
      <%= link_to "Cancel Lesson", lesson_path(@lesson), method: :delete, data: { confirm: "Are you sure you want to cancel? "}, class: "btn btn-red" %>
    </div>

    <div class="border p-6 bg-gray-400 mb-5 flex items-center justify-between">
      <p class="border-2 py-3 px-4 border-indigo-500 rounded-full text-sm text-indigo-600">
        Start time: <span class="font-bold"><%= readable_time(@lesson.start_time) %></span>
      </p>
      <div class="border-t-2 border-indigo-400 border-dashed h-1 flex-1"></div>
      <p class="border-2 py-3 px-4 border-indigo-400 rounded-full text-sm text-indigo-600">
        End time: <span class="font-bold"><%= readable_time(@lesson.end_time) %></span>
      </p>
    </div>

    <h4>Leave a message for Rebecca</h4>
    <hr class="border" />

    <% unless user_signed_in? %>
      <div class="bg-grey-200 rounded p-4 mt-4 text-center">
        <p class="text-sm text-grey-600"><%= link_to "Login", new_user_session_path, class: "link" %> or <%= link_to "Sign up", new_user_regsitration_path, class: "link" %> to leave a message here.</p>
      </div>
    <% else %>
        <%= render 'comments/form' %>
    <% end %>

    <div id="comments">
      <%= render @lesson.comments %>
    </div>
  </div>
  <%= @mail %>
</div>