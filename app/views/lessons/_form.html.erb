<div class="p-10 bg-white border border-gray-400 rounded">
  <%= form_with(model: lesson, local: true, class: "lesson-form") do |form| %>
    <% if lesson.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>
  
        <ul>
          <% lesson.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <h3 class="mb-6">
      Lesson Information
    </h3>
  
    <!--<div class="field">-->
    <!--  <%#= form.label :name %>-->
    <!--  <%#= form.text_field :name %>-->
    <!--</div>-->
  
    <div class="mb-6">
      <%= form.label :start_time, class: "label" %>
      <div class="flex items-center justify-between max-w-md">
        <%= form.datetime_select :start_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, class: "select py-2 px-2 mr-2" %>
      </div>
    </div>
  
    <div class="mb-6">
      <%= form.label :end_time, class: "label" %>
      <div class="flex items-center justify-between max-w-md">
        <%= form.datetime_select :end_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, class: "select py-2 px-2 mr-2" %>
      </div>
    </div>
    
    <hr class="border" />
    
    <%= render 'payment_form' %>
    
    <%= form.submit class: "btn btn-indigo text-base py-2 px-5 mt-3" %>

  <% end %>
</div>
