<div class="flex flex-wrap items-center mb-5 text-indigo-700">
  <div class="flex-1 flex justify-between items-center">
    <div><h3 class="text-lg"><%= user.name %></h3> <%= user.email %> <% if current_user %>(You)<% end %></div>
    <p>Registered on <%= readable_time(user.created_at) %></p>
  </div>
  <%= link_to 'Delete User', users_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red btn-outline ml-4" %>
</div>

<% if user.lessons.any? %>
  <div class="block pl-2 border-l border-indigo-300 mb-5">
    <p class="text-xs uppercase tracking-loose text-grey-700 pt-1">Upcoming Lessons</p>
    <% user.lessons.each do |lesson| %>
      <%= link_to lesson, class: "link my-2 block" do %>
        <%= readable_date(lesson.start_time) %> &ndash;
        <%= readable_date(lesson.end_time) %>
      <% end %>
    <% end %>
  </div>
<% end %>